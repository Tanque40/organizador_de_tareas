-# frozen_string_literal: true
= simple_form_for(@task) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :name, label: t('common.name')
    = f.input :description, label: t('common.description')
    = f.input :due_date, label: t('common.due_date')
    = f.association :category, label: t('common.category')

  .form-actions
    = f.button :submit
